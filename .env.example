# Meme Generator Unified 环境变量配置示例
# 复制此文件为 .env 并填入你的配置

# ===========================================
# 翻译服务配置
# ===========================================

# 翻译服务类型: "openai" 或 "baidu" (默认: openai)
TRANSLATOR_TYPE=openai

# 百度翻译配置 (当 TRANSLATOR_TYPE=baidu 时使用)
BAIDU_TRANS_APPID=your_appid_here
BAIDU_TRANS_APIKEY=your_apikey_here

# OpenAI 格式 API 配置 (当 TRANSLATOR_TYPE=openai 时使用)
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_API_KEY=your_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TIMEOUT=30

# ===========================================
# 服务器配置
# ===========================================

# 服务监听地址 (Docker中通常使用 0.0.0.0)
HOST=127.0.0.1

# 服务端口
PORT=2233

# 日志级别: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ===========================================
# Meme 配置
# ===========================================

# 是否加载内置表情包
LOAD_BUILTIN_MEMES=true

# 表情包目录 (JSON数组格式)
MEME_DIRS=["./contrib/memes", "./emoji/emoji"]

# 禁用的表情包列表 (JSON数组格式)
MEME_DISABLED_LIST=[]

# ===========================================
# GIF 配置
# ===========================================

# GIF 最大文件大小 (MB)
GIF_MAX_SIZE=10.0

# GIF 最大帧数
GIF_MAX_FRAMES=100

# ===========================================
# Docker 特定配置
# ===========================================

# 时区设置
TZ=Asia/Shanghai

# 是否启用监控指标
ENABLE_METRICS=false

# 监控指标端口
METRICS_PORT=9090

# ===========================================
# 开发配置
# ===========================================

# 开发模式 (启用热重载等)
DEBUG_MODE=false

# 允许的跨域来源
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# API 速率限制 (每分钟请求数)
RATE_LIMIT=60

# ===========================================
# 数据库配置 (可选)
# ===========================================

# 如果需要持久化存储用户数据等
# DATABASE_URL=sqlite:///data/meme.db

# ===========================================
# 缓存配置 (可选)
# ===========================================

# Redis 缓存 (用于提高性能)
# REDIS_URL=redis://localhost:6379/0

# 缓存过期时间 (秒)
# CACHE_EXPIRE=3600

# ===========================================
# 安全配置
# ===========================================

# API 密钥 (如果需要认证)
# API_KEY=your_secret_api_key

# JWT 密钥 (如果使用 JWT 认证)
# JWT_SECRET=your_jwt_secret

# 允许的文件类型
ALLOWED_FILE_TYPES=["jpg", "jpeg", "png", "gif", "webp"]

# 最大文件大小 (MB)
MAX_FILE_SIZE=50

# ===========================================
# 监控和日志
# ===========================================

# Sentry DSN (错误监控)
# SENTRY_DSN=https://your-sentry-dsn

# 日志文件路径
LOG_FILE=logs/meme-generator.log

# 是否启用访问日志
ENABLE_ACCESS_LOG=true

# ===========================================
# 第三方服务
# ===========================================

# 图片存储服务 (如 AWS S3, 阿里云 OSS 等)
# STORAGE_TYPE=local
# STORAGE_BUCKET=your-bucket-name
# STORAGE_ACCESS_KEY=your-access-key
# STORAGE_SECRET_KEY=your-secret-key
# STORAGE_REGION=your-region

# CDN 配置
# CDN_BASE_URL=https://your-cdn-domain.com

# ===========================================
# 性能配置
# ===========================================

# 工作进程数 (Docker 中通常设为 1)
WORKERS=1

# 每个进程的线程数
THREADS=4

# 连接超时时间 (秒)
TIMEOUT=30

# Keep-alive 超时时间 (秒)
KEEPALIVE_TIMEOUT=2

# ===========================================
# 功能开关
# ===========================================

# 是否启用翻译功能
ENABLE_TRANSLATION=true

# 是否启用图片压缩
ENABLE_IMAGE_COMPRESSION=true

# 是否启用水印
ENABLE_WATERMARK=false

# 水印文本
WATERMARK_TEXT="Generated by Meme Generator"

# ===========================================
# 实验性功能
# ===========================================

# 是否启用 AI 生成功能 (实验性)
ENABLE_AI_GENERATION=false

# AI 模型配置
# AI_MODEL_URL=https://your-ai-model-endpoint
# AI_MODEL_KEY=your-ai-model-key