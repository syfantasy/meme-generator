[meme]
load_builtin_memes = ${LOAD_BUILTIN_MEMES:-true}
meme_dirs = ${MEME_DIRS:-["/data/contrib", "/data/emoji"]}
meme_disabled_list = ${MEME_DISABLED_LIST:-[]}

[resource]
resource_url = ""
resource_urls = [
    "https://raw.githubusercontent.com/MemeCrafters/meme-generator/",
    "https://mirror.ghproxy.com/https://raw.githubusercontent.com/MemeCrafters/meme-generator/",
    "https://cdn.jsdelivr.net/gh/MemeCrafters/meme-generator@",
    "https://fastly.jsdelivr.net/gh/MemeCrafters/meme-generator@",
    "https://raw.gitmirror.com/MemeCrafters/meme-generator/",
]

[gif]
gif_max_size = ${GIF_MAX_SIZE:-10.0}
gif_max_frames = ${GIF_MAX_FRAMES:-100}

[translate]
# 翻译服务类型: "baidu" 或 "openai"
translator_type = "${TRANSLATOR_TYPE:-baidu}"

# 百度翻译配置
baidu_trans_appid = "${BAIDU_TRANS_APPID:-}"
baidu_trans_apikey = "${BAIDU_TRANS_APIKEY:-}"

# OpenAI格式翻译配置
openai_api_base = "${OPENAI_API_BASE:-}"
openai_api_key = "${OPENAI_API_KEY:-}"
openai_model = "${OPENAI_MODEL:-gpt-3.5-turbo}"
openai_timeout = ${OPENAI_TIMEOUT:-30}

[server]
host = "0.0.0.0"
port = ${PORT:-2233}

[log]
log_level = "${LOG_LEVEL:-INFO}"