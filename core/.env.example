# meme-generator 环境变量配置示例
# 复制此文件为 .env 并修改相应配置

# 表情包配置
LOAD_BUILTIN_MEMES=true
MEME_DIRS=[]
MEME_DISABLED_LIST=[]

# GIF配置
GIF_MAX_SIZE=10.0
GIF_MAX_FRAMES=100

# 翻译配置
# 翻译服务类型: "baidu" 或 "openai"
TRANSLATOR_TYPE=baidu

# 百度翻译配置
BAIDU_TRANS_APPID=
BAIDU_TRANS_APIKEY=

# OpenAI格式翻译配置
# 支持OpenAI官方API或兼容OpenAI格式的API（如OneAPI、FastGPT等）
OPENAI_API_BASE=https://api.openai.com
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TIMEOUT=30

# 服务器配置
HOST=127.0.0.1
PORT=2233

# 日志配置
LOG_LEVEL=INFO